# Google Cloud Configuration (Service Account Authentication)
GOOGLE_CLOUD_PROJECT=vibe-decker-mvp
# For local development: path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# For Railway/production: base64-encoded service account JSON
# GOOGLE_APPLICATION_CREDENTIALS=<base64-encoded-json-string>
VERTEX_AI_LOCATION=us-central1

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_BUCKET=generated-images

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# IP Allowlist Security (replaces API_KEYS)
# Comma-separated list of allowed IP addresses
# Only these IPs can access the API endpoints
ALLOWED_IPS=10.0.1.100,10.0.1.101  # Director Service, Text Service IPs
ENABLE_IP_ALLOWLIST=true  # Set to false to disable (not recommended for production)
ALLOW_LOCAL_IPS=true  # Allow localhost (127.0.0.1) - set to false in production

# Application Settings
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
MAX_IMAGE_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_BACKGROUND_REMOVAL=true
ENABLE_TRANSPARENT_PNG=true
ENABLE_CUSTOM_ASPECT_RATIOS=true

# Railway Configuration (for deployment)
PORT=${PORT:-8000}
